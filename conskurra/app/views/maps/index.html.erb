<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <title>Simple markers</title>
    <style>
      html, body, #map-canvas {
        height: 100%;
        margin: 0px;
        padding: 0px
      }
    </style>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    <script>
function initialize() {
 var latlong = $('#map').data('marker');
 $('.lat').text(latlong.l);
  $('.long').text(latlong.n);
  var myLatlng = new google.maps.LatLng(latlong.l, latlong.n);
  var mapOptions = {
    zoom: 4,
    center: myLatlng
  }
  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

  var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: 'Hello World!'
  });
}
google.maps.event.addDomListener(window, 'load', initialize);
  </script>
</head>
  <body>
    <div id="map-canvas"></div>
	<% @maps.each do |item| %>
	   <%= item %>
	  <div id="map" data-marker='{"l": <%= item["l"]%> ,"n":<%= item["n"]%> }'></div>
      <div class="lat">latitude</div>
      <div class="long">logitude</div> 
	<% end%>
	
  </body>
</html>